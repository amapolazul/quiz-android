<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.amapolazul.www.quizamapola.logica.preguntas.grado2.PreguntasGeografiaGrado2"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grado2"
        android:layout_marginLeft="197dp"
        android:src="@drawable/grado2"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/manoArriba"
        android:layout_toEndOf="@+id/manoArriba"
        android:layout_marginStart="197dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cienciasGrado2"
        android:src="@drawable/geografiagrado2"
        android:layout_alignBottom="@+id/grado2"
        android:layout_toRightOf="@+id/grado2"
        android:layout_toEndOf="@+id/grado2"
        android:layout_marginLeft="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuGrado2"
        android:src="@drawable/menugrado2"
        android:layout_alignTop="@+id/cienciasGrado2"
        android:layout_toRightOf="@+id/cienciasGrado2"
        android:layout_toEndOf="@+id/cienciasGrado2"
        android:layout_marginTop="-5dp"
        android:onClick="regresar"
        android:paddingLeft="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blanco1"
        android:src="@drawable/blanco1"
        android:layout_below="@+id/grado2"
        android:layout_alignLeft="@+id/grado2"
        android:layout_alignStart="@+id/grado2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosA"
        android:layout_below="@+id/blanco1"
        android:layout_alignLeft="@+id/blanco1"
        android:layout_alignStart="@+id/blanco1"
        android:src="@drawable/blanco2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-5dp"
        android:onClick="responderConA" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosB"
        android:src="@drawable/blanco2"
        android:layout_alignTop="@+id/blancoDosA"
        android:layout_alignRight="@+id/blanco1"
        android:layout_alignEnd="@+id/blanco1"
        android:onClick="responderConB" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosC"
        android:src="@drawable/blanco2"
        android:onClick="responderConC"
        android:layout_below="@+id/blancoDosA"
        android:layout_alignLeft="@+id/blancoDosA"
        android:layout_alignStart="@+id/blancoDosA" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosD"
        android:src="@drawable/blanco2"
        android:onClick="responderConD"
        android:layout_alignTop="@+id/blancoDosC"
        android:layout_alignLeft="@+id/blancoDosB"
        android:layout_alignStart="@+id/blancoDosB" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aG2"
        android:src="@drawable/ag2"
        android:layout_alignTop="@+id/blancoDosA"
        android:layout_alignLeft="@+id/blancoDosA"
        android:layout_alignStart="@+id/blancoDosA"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bG2"
        android:layout_alignBottom="@+id/aG2"
        android:layout_alignLeft="@+id/blancoDosB"
        android:layout_alignStart="@+id/blancoDosB"
        android:src="@drawable/bg2"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cG2"
        android:src="@drawable/cg2"
        android:layout_alignTop="@+id/blancoDosC"
        android:layout_alignLeft="@+id/aG2"
        android:layout_alignStart="@+id/aG2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dG2"
        android:src="@drawable/dg2"
        android:layout_alignTop="@+id/blancoDosC"
        android:layout_alignLeft="@+id/bG2"
        android:layout_alignStart="@+id/bG2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manoArriba"
        android:src="@drawable/manoarriba"
        android:layout_below="@+id/aG2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manoAbajo"
        android:src="@drawable/manoabajo"
        android:paddingTop="10dp"
        android:layout_below="@+id/manoArriba"
        android:layout_toLeftOf="@+id/grado2"
        android:layout_toStartOf="@+id/grado2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/personajepregunta"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/blancoDosA"
        android:layout_toStartOf="@+id/blancoDosA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/contadorCorrectasGeografiaG2"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffff057e"
        android:layout_alignBottom="@+id/manoArriba"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/contadorIncorrectasGeografiaG2"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ffff057e"
        android:paddingBottom="10dp"
        android:layout_alignBottom="@+id/manoAbajo"
        android:layout_alignLeft="@+id/contadorCorrectasGeografiaG2"
        android:layout_alignStart="@+id/contadorCorrectasGeografiaG2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaAGeografiaG2"
        android:layout_toRightOf="@+id/aG2"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:paddingBottom="8dp"
        android:layout_toLeftOf="@+id/blancoDosB"
        android:layout_toStartOf="@+id/blancoDosB"
        android:width="270dp"
        android:layout_below="@+id/blanco1"
        android:layout_alignBottom="@+id/aG2"
        android:paddingTop="40dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaBGeografiaG2"
        android:layout_alignTop="@+id/respuestaAGeografiaG2"
        android:layout_toRightOf="@+id/bG2"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:paddingBottom="8dp"
        android:layout_alignRight="@+id/enunciadoGeografiaG2"
        android:layout_alignEnd="@+id/enunciadoGeografiaG2"
        android:width="270dp"
        android:layout_alignBottom="@+id/bG2"
        android:paddingTop="40dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaCGeografiaG2"
        android:layout_toRightOf="@+id/cG2"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:width="270dp"
        android:layout_below="@+id/blancoDosA"
        android:layout_alignBottom="@+id/cG2"
        android:paddingTop="40dp"
        android:paddingBottom="8dp"
        android:layout_alignRight="@+id/respuestaAGeografiaG2"
        android:layout_alignEnd="@+id/respuestaAGeografiaG2"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaDGeografiaG2"
        android:layout_alignTop="@+id/respuestaCGeografiaG2"
        android:layout_toRightOf="@+id/dG2"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:width="270dp"
        android:layout_alignBottom="@+id/dG2"
        android:paddingTop="40dp"
        android:paddingBottom="8dp"
        android:layout_alignRight="@+id/respuestaBGeografiaG2"
        android:layout_alignEnd="@+id/respuestaBGeografiaG2"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/enunciadoGeografiaG2"
        android:textSize="27dp"
        android:width="640dp"
        android:scrollbars = "vertical"
        android:maxLines="3"
        android:fadeScrollbars="false"
        android:textColor="#ff471cff"
        android:layout_alignLeft="@+id/aG2"
        android:layout_alignStart="@+id/aG2"
        android:layout_alignTop="@+id/blanco1"
        android:layout_alignRight="@+id/menuGrado2"
        android:layout_alignEnd="@+id/menuGrado2"
        android:paddingLeft="30dp"
        android:paddingTop="35dp" />

</RelativeLayout>
