<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.amapolazul.www.quizamapola.logica.preguntas.grado1.PreguntasMatematicasGradoUno"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grado1"
        android:layout_marginLeft="318dp"
            android:layout_marginStart="274dp"
        android:src="@drawable/grado1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matematicasGrado1"
        android:src="@drawable/matematicasgrado1"
        android:layout_alignBottom="@+id/grado1"
        android:layout_toRightOf="@+id/grado1"
        android:layout_toEndOf="@+id/grado1"
        android:layout_marginLeft="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuGrado1"
        android:src="@drawable/menugrado1"
        android:layout_alignBottom="@+id/matematicasGrado1"
        android:layout_toRightOf="@+id/matematicasGrado1"
        android:layout_toEndOf="@+id/matematicasGrado1"
        android:layout_marginLeft="7dp"
        android:onClick="regresar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blanco1"
        android:src="@drawable/blanco1"
        android:layout_below="@+id/grado1"
        android:layout_alignLeft="@+id/grado1"
        android:layout_alignStart="@+id/grado1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosA"
        android:layout_below="@+id/blanco1"
        android:layout_alignLeft="@+id/blanco1"
        android:layout_alignStart="@+id/blanco1"
        android:src="@drawable/blanco2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-5dp"
        android:onClick="responderConA" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosB"
        android:src="@drawable/blanco2"
        android:layout_alignTop="@+id/blancoDosA"
        android:layout_alignRight="@+id/blanco1"
        android:layout_alignEnd="@+id/blanco1"
        android:onClick="responderConB" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosC"
        android:src="@drawable/blanco2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/blancoDosA"
        android:layout_alignStart="@+id/blancoDosA"
        android:onClick="responderConC" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosD"
        android:src="@drawable/blanco2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/blancoDosB"
        android:layout_alignStart="@+id/blancoDosB"
        android:onClick="responderConD" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aG1"
        android:layout_above="@+id/blancoDosC"
        android:layout_alignLeft="@+id/blancoDosA"
        android:layout_alignStart="@+id/blancoDosA"
        android:src="@drawable/ag1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bG1"
        android:layout_alignBottom="@+id/aG1"
        android:layout_alignLeft="@+id/blancoDosB"
        android:layout_alignStart="@+id/blancoDosB"
        android:src="@drawable/bg1"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cG1"
        android:src="@drawable/cg1"
        android:layout_alignTop="@+id/blancoDosC"
        android:layout_alignLeft="@+id/aG1"
        android:layout_alignStart="@+id/aG1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dG1"
        android:src="@drawable/dg1"
        android:layout_alignTop="@+id/blancoDosC"
        android:layout_alignLeft="@+id/bG1"
        android:layout_alignStart="@+id/bG1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manoArriba"
        android:src="@drawable/manoarriba"
        android:layout_alignBottom="@+id/blancoDosA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manoAbajo"
        android:layout_below="@+id/manoArriba"
        android:layout_alignLeft="@+id/manoArriba"
        android:layout_alignStart="@+id/manoArriba"
        android:src="@drawable/manoabajo"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/personajepregunta"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/blanco1"
        android:layout_toStartOf="@+id/blanco1"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/contadorCorrectasMatematicasG4"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:textColor="#ffff057e"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/manoAbajo"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/contadorIncorrectasMatematicasG1"
        android:textColor="#ffff057e"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/manoAbajo"
        android:layout_alignLeft="@+id/contadorCorrectasMatematicasG4"
        android:layout_alignStart="@+id/contadorCorrectasMatematicasG4"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/enunciadoMatematicasG1"
        android:textSize="22dp"
        android:width="640dp"
        android:scrollbars = "vertical"
        android:maxLines="3"
        android:fadeScrollbars="false"
        android:layout_toRightOf="@+id/aG1"
        android:layout_toEndOf="@+id/aG1"
        android:layout_alignTop="@+id/blanco1"
        android:paddingTop="20dp"
        android:textColor="#ff471cff"
        android:layout_marginLeft="-45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaMatematicasAG1"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_above="@+id/manoArriba"
        android:layout_toRightOf="@+id/aG1"
        android:layout_toEndOf="@+id/aG1"
        android:width="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaBMatematicasG1"
        android:layout_alignTop="@+id/respuestaMatematicasAG1"
        android:layout_toRightOf="@+id/bG1"
        android:layout_toEndOf="@+id/bG1"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:width="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaCMatematicasG2"
        android:textColor="#ff471cff"
        android:width="250dp"
        android:layout_alignBottom="@+id/contadorIncorrectasMatematicasG1"
        android:layout_toRightOf="@+id/cG1"
        android:layout_toEndOf="@+id/cG1"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaDMatematicasG1"
        android:layout_alignTop="@+id/respuestaCMatematicasG2"
        android:layout_toRightOf="@+id/dG1"
        android:layout_toEndOf="@+id/dG1"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:width="250dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagenMatematicasG1"
        android:src="@drawable/imagenmuestra"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:layout_above="@+id/blancoDosB"
        android:layout_alignRight="@+id/menuGrado1"
        android:layout_alignEnd="@+id/menuGrado1" />

</RelativeLayout>
