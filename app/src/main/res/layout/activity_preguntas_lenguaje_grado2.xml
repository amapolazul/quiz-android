<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.amapolazul.www.quizamapola.logica.preguntas.grado2.PreguntasLenguajeGrado2"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grado2"
        android:layout_marginLeft="318dp"
        android:src="@drawable/grado2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cienciasGrado2"
        android:src="@drawable/lenguajegrado2"
        android:layout_alignBottom="@+id/grado2"
        android:layout_toRightOf="@+id/grado2"
        android:layout_toEndOf="@+id/grado2"
        android:layout_marginLeft="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuGrado2"
        android:src="@drawable/menugrado2"
        android:layout_alignTop="@+id/cienciasGrado2"
        android:layout_toRightOf="@+id/cienciasGrado2"
        android:layout_toEndOf="@+id/cienciasGrado2"
        android:layout_marginTop="-5dp"
        android:onClick="regresar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blanco1"
        android:src="@drawable/blanco1"
        android:layout_below="@+id/grado2"
        android:layout_alignLeft="@+id/grado2"
        android:layout_alignStart="@+id/grado2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosA"
        android:layout_below="@+id/blanco1"
        android:layout_alignLeft="@+id/blanco1"
        android:layout_alignStart="@+id/blanco1"
        android:src="@drawable/blanco2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-5dp"
        android:onClick="responderConA" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosB"
        android:src="@drawable/blanco2"
        android:layout_alignTop="@+id/blancoDosA"
        android:layout_alignRight="@+id/blanco1"
        android:layout_alignEnd="@+id/blanco1"
        android:onClick="responderConB" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosC"
        android:src="@drawable/blanco2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/blancoDosA"
        android:layout_alignStart="@+id/blancoDosA"
        android:onClick="responderConC" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blancoDosD"
        android:src="@drawable/blanco2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/blancoDosB"
        android:layout_alignStart="@+id/blancoDosB"
        android:onClick="responderConD" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aG2"
        android:layout_above="@+id/blancoDosC"
        android:layout_alignLeft="@+id/blancoDosA"
        android:layout_alignStart="@+id/blancoDosA"
        android:src="@drawable/ag2"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bG2"
        android:layout_alignBottom="@+id/aG2"
        android:layout_alignLeft="@+id/blancoDosB"
        android:layout_alignStart="@+id/blancoDosB"
        android:src="@drawable/bg2"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cG2"
        android:src="@drawable/cg2"
        android:layout_alignTop="@+id/blancoDosC"
        android:layout_alignLeft="@+id/aG2"
        android:layout_alignStart="@+id/aG2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dG2"
        android:src="@drawable/dg2"
        android:layout_alignTop="@+id/blancoDosC"
        android:layout_alignLeft="@+id/bG2"
        android:layout_alignStart="@+id/bG2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manoArriba"
        android:src="@drawable/manoarriba"
        android:layout_alignBottom="@+id/blancoDosA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manoAbajo"
        android:layout_below="@+id/manoArriba"
        android:layout_alignLeft="@+id/manoArriba"
        android:layout_alignStart="@+id/manoArriba"
        android:src="@drawable/manoabajo"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/personajepregunta"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/blanco1"
        android:layout_toStartOf="@+id/blanco1"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/contadorCorrectasLenguajeG2"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:textColor="#ffff057e"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/manoArriba"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/contadorIncorrectasLenguajeG2"
        android:textColor="#ffff057e"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:layout_alignBottom="@+id/manoAbajo"
        android:layout_alignLeft="@+id/contadorCorrectasLenguajeG2"
        android:layout_alignStart="@+id/contadorCorrectasLenguajeG2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/enunciadoPreguntaLenguajeG2"
        android:textSize="22dp"
        android:width="640dp"
        android:scrollbars = "vertical"
        android:maxLines="3"
        android:fadeScrollbars="false"
        android:layout_toRightOf="@+id/aG2"
        android:layout_toEndOf="@+id/aG2"
        android:layout_below="@+id/menuGrado2"
        android:paddingTop="20dp"
        android:textColor="#ff471cff"
        android:layout_marginLeft="-45dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="52dp"
        android:src="@drawable/verlectura2"
        android:layout_alignLeft="@+id/cienciasGrado2"
        android:layout_alignStart="@+id/cienciasGrado2"
        android:onClick="mostrarLecturaModalLenguajeG1"
        android:paddingTop="116dp"
        android:layout_alignTop="@+id/enunciadoPreguntaLenguajeG2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaALenguajeG2"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:paddingBottom="8dp"
        android:width="250dp"
        android:layout_toRightOf="@+id/aG2"
        android:layout_toEndOf="@+id/aG2"
        android:layout_below="@+id/blanco1"
        android:layout_alignBottom="@+id/aG2"
        android:paddingTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaBLenguajeG2"
        android:textColor="#ff471cff"
        android:paddingLeft="5dp"
        android:paddingBottom="8dp"
        android:width="250dp"
        android:layout_toRightOf="@+id/bG2"
        android:layout_toEndOf="@+id/bG2"
        android:layout_alignTop="@+id/respuestaALenguajeG2"
        android:layout_alignBottom="@+id/bG2"
        android:paddingTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaCLenguajeG2"
        android:textColor="#ff471cff"
        android:width="250dp"
        android:layout_toRightOf="@+id/cG2"
        android:layout_toEndOf="@+id/cG2"
        android:paddingTop="28dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/blancoDosA"
        android:layout_alignBottom="@+id/cG2"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/respuestaDLenguajeG2"
        android:textColor="#ff471cff"
        android:width="250dp"
        android:layout_alignTop="@+id/respuestaCLenguajeG2"
        android:layout_toRightOf="@+id/dG2"
        android:layout_toEndOf="@+id/dG2"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/dG2"
        android:paddingTop="28dp"
        android:paddingBottom="8dp" />

</RelativeLayout>
